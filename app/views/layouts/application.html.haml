!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shine
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container
      - if notice.present?
        %aside.alert.alert-info
          %p.notice= notice
      - if alert.present?
        %aside.alert.alert-danger
          %p.alert= alert

      = yield
